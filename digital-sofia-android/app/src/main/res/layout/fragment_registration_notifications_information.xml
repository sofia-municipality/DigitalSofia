<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_registration_background" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_transparent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_transparent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_32"
                android:background="@color/color_transparent"
                app:srcCompat="@drawable/img_logo_big" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.20spSemiBoldMainColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_32"
                android:background="@color/color_transparent"
                android:singleLine="false"
                android:text="@string/notifications_information_title" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.16spRegularMainColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_32"
                android:background="@color/color_transparent"
                android:singleLine="false"
                android:text="@string/notifications_information_description" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.16spRegularNotificationsRed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_32"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:singleLine="false"
                android:text="@string/notifications_information_disclaimer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAgree"
                style="@style/ButtonStyle.LightBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_48"
                android:enabled="true"
                android:text="@string/notifications_information_button_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>