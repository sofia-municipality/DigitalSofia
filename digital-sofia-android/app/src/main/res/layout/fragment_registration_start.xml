<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_registration_background" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_transparent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_transparent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/BetaButtonStyle"
                android:id="@+id/btnBeta"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/beta_button_background"
                android:text="@string/beta_button_title"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_64"
                android:background="@color/color_transparent"
                app:srcCompat="@drawable/img_logo_big" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.24spSemiBoldMainColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_96"
                android:layout_marginEnd="@dimen/margin_32"
                android:background="@color/color_transparent"
                android:singleLine="false"
                android:text="@string/start_title" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyle.20spRegularMainColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_32"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:singleLine="false"
                android:text="@string/start_description" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegistration"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_64"
            android:background="@drawable/bg_button_gradient_border"
            android:clipToPadding="true"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_18"
            android:paddingRight="@dimen/margin_18"
            android:text="@string/start_button"
            android:textColor="@color/color_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>